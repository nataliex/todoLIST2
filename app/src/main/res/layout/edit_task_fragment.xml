<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/edit_name_et"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/edit_name_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="Name:"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edit_discription_et"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_below="@+id/edit_discription_tv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/edit_discription_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_deadline_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="96dp"
        android:text="Description:"
        android:textSize="30dp" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/edit_deadline_et"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_name_et"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="20dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/edit_deadline_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Deadline:"
        android:textSize="30dp" />

    <Button
        android:id="@+id/edit_btn_add"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/selector_btn_add_task"
        android:text="âœ“"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/edit_set_starmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_discription_et"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:text="Great?"
        android:textSize="30dp" />

    <CheckBox
        android:id="@+id/edit_cb_starmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edit_set_starmark"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/edit_set_starmark" />

    <ImageView
        android:id="@+id/edit_create_starmark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/edit_set_starmark"
        android:layout_alignParentStart="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/starmark" />

    <CalendarView
        android:id="@+id/edit_calendar"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="-62dp"
        android:scrollbarSize="4dp"
        android:selectedWeekBackgroundColor="@drawable/button_add_task_normal"></CalendarView>

</RelativeLayout>